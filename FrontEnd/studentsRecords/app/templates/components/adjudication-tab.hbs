        <div class = "ui secondary pointing fluid two item menu" style = "padding-bottom:0">
            <div style="cursor: pointer;" class = "active item" data-tab="Adjudication">Perform Adjudication</div>
            <div style="cursor: pointer;" class = "right floated item" data-tab="Reports">Generate Reports</div>
        </div>
    </div>
    <div class = "five wide column"></div>
