<div class = "ui tab segment active" data-tab="Adjudication">
	{{perform-adjudication reportAction = (action 'quickGenerateReport')}}
</div>
<div class = "ui tab segment" data-tab="Reports">
	{{generate-reports termID = termID}}
</div>

